<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>get CRUD</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #afadad;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #c5edac;
        }


        td.edit-button {
            border: 1px solid #ffffff;
            text-align: left;
            padding: 8px;
        }

        button.btn-edit {
            background-color: #b8fffa;
            border-radius: 3px;
            border-color: #a1e9ff;
        }

        button.btn-delete {
            background-color: #ffacd6;
            border-color: #ffc0df;
            border-radius: 3px;
        }
    </style>
</head>

<body>
    <table style="width: 100%;">
        <!-- tr table row -->
        <tr>
            <!-- th table head -->
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Address</th>
        </tr>
        <!-- td table data -->
        <% for(let i=0; i<dataTable.length; i++){ %>
            <tr>

                <td>
                    <!-- dùng dấu "=" ở đây để nó bt ta muốn in ra 1 dữ liệu j đây -->
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].phonemumber %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>

                <td class="edit-button">
                    <!-- dùng thẻ a hỗ trọ chúng ta cái thuộc tính href -->
                    <button class="btn-edit"> <a href="/edit-crud?id=<%= dataTable[i].id %>"
                            type="button">Edit</a></button>
                    <button class="btn-delete"> <a type="button">Delete</a></button>
                </td>

            </tr>
            <% } %>
    </table>
    <table>

    </table>
</body>

</html>